<h2>新規投稿画面</h2>
 <% if @twc.errors.any? %>
    <div id="error_explanation">
      <h2><%= @twc.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @twc.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @twc, local: true, url: confirm_twcs_path) do |form| %>
  <div class="input_content">
    <%= form.label(:content, "本文:")%>
    <%= form.text_field :content %>
  </div>
  <%= form.submit "投稿します" %>
<% end %>