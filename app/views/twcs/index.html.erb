<h1>つぶやき一覧</h1>

<p><%= notice%></p>

<div class="container-fluid twcs">
<table>
<% @twcs.each do |twc| %>
  <tr>
    <td><%= twc.content %></td>
    <td><%= link_to "編集",edit_twc_path(twc.id),class: "btn btn-info"%></td>
    <td><%= link_to "削除",twc_path(twc.id), method: :delete,data: {confirm: "本当に削除していいですか？"},class: "btn btn-danger"%></td>
  </tr>
<% end %>
</table>
</div>